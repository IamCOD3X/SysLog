<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Base" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:fontFamily">@font/product_sans</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accentVariant</item>

        <item name="android:colorBackground">?attr/colorSurface</item>

        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>

        <item name="actionBarPopupTheme">@style/Theme.SysLog.PopupOverlay</item>
    </style>

    <style name="Theme.SysLog" parent="Theme.Base">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <!-- Custom attrs -->
    </style>

    <style name="Theme.SysLog.PopupOverlay" parent="Theme.Base">
        <item name="iconTint">@android:color/primary_text_light</item>
        <item name="navigationIconTint">@android:color/primary_text_light</item>
    </style>

</resources>
